<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView app:cardCornerRadius="5dp"
    app:cardElevation="1dp"

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="100dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:background="@drawable/shape_background_lnr_counter_view"
    android:weightSum="3"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/txt_count_minus"
        android:textStyle="bold"
        android:textColor="@color/template"
        android:background="#14FD1958"
        android:gravity="center"
        android:textSize="20sp"
        android:text="-"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/txt_count_change"
        android:textColor="@color/template"
        android:gravity="center"
        android:textSize="22sp"
        tools:text="1"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
    <TextView
        android:id="@+id/txt_count_add"
        android:textStyle="bold"
        android:textColor="@color/template"
        android:background="#14FD1958"
        android:gravity="center"
        android:textSize="20sp"
        android:text="+"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"/>
</LinearLayout>
</androidx.cardview.widget.CardView>